<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moreefflogin"
    tools:context=".SignUp"
   >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/signup_image"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/appppicoooon" />
    <TextView
        android:id="@+id/welcome_mess"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="0dp"
        android:text="Sahayata"
        android:layout_below="@+id/signup_image"
        android:textColor="@color/blue"
        android:textSize="55dp" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/welcome_mess"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:hint="Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="13dp" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:hint="Email"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="13dp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_email"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="13dp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:background="@drawable/btn_background"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linearlayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="80dp"
        android:layout_below="@+id/btnSignUp"
        android:orientation="horizontal"
        android:weightSum="100">


        <ImageView
            android:id="@+id/googleicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btnSignUp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="114dp"

            android:layout_weight="20"
            android:src="@drawable/googleicon" />

        <Button

            android:id="@+id/gmail_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSignUp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/btn_background"
            android:text="Sign up with EMail"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>